@model lab31_brian.Models.RegistrationViewModel

    @{
        Layout = "_SigninStatus";
    }

<h3>Registration Page</h3>

<form asp-route-redirecturl="@ViewData["ReturnUrl"]" method="post">
    <div class="validation" asp-validation-summary="All"></div>

    <label asp-for="FirstName"></label>
    <input asp-for="FirstName"/>
    <span asp-validation-for="FirstName"></span><br/>

    <label asp-for="LastName"></label>
    <input asp-for="LastName"/>
    <span asp-validation-for="LastName"></span><br/>
    
    <label asp-for="DOB"></label>
    <input asp-for="DOB"/>
    <span asp-validation-for="DOB"></span><br/>
    
    <label asp-for="Email"></label>
    <input asp-for="Email"/>
    <span asp-validation-for="Email"></span><br/>
    
    <label asp-for="ConfirmEmail"></label>
    <input asp-for="ConfirmEmail"/>
    <span asp-validation-for="ConfirmEmail"></span><br/>
    
    <label asp-for="Password"></label>
    <input asp-for="Password"/>
    <span asp-validation-for="Password"></span><br/>
    
    <label asp-for="ConfirmPassword"></label>
    <input asp-for="ConfirmPassword"/>
    <span asp-validation-for="ConfirmPassword"></span><br/>
    
    <button type="submit">Register</button>

</form>